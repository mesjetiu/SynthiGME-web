{
  "name": "synthigme-web",
  "version": "0.5.0",
  "description": "Prototype EMS Synthi interface in WebAudio",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "test": "node --test 'tests/{configs,core,i18n,integration,mocks,modules,osc,panelBlueprints,state,ui,utils,worklets}/**/*.test.js'",
    "test:audio": "npx playwright test --config=tests/audio/playwright.config.js",
    "test:audio:ui": "npx playwright test --config=tests/audio/playwright.config.js --ui",
    "test:audio:headed": "npx playwright test --config=tests/audio/playwright.config.js --headed",
    "test:audio:debug": "npx playwright test --config=tests/audio/playwright.config.js --debug",
    "test:all": "node scripts/test-all.mjs",
    "pretest:require": "node scripts/run-tests.mjs --require-pass",
    
    "dev": "npm run build:i18n && node scripts/build.mjs --outdir=dist-app && electron .",
    "dev:web": "npm run build:i18n && node scripts/build.mjs && echo 'Abre docs/index.html en navegador'",
    
    "build:i18n": "node scripts/build-i18n.mjs",
    "build:web": "npm run build:i18n && node scripts/build.mjs",
    "build:web:test": "node scripts/run-tests.mjs --require-pass && npm run build:web",
    "build:electron": "npm run build:i18n && node scripts/electron-build.mjs",
    "build:electron:linux": "npm run build:i18n && node scripts/electron-build.mjs --linux",
    "build:electron:win": "npm run build:i18n && node scripts/electron-build.mjs --win",
    "build:electron:all": "npm run build:i18n && node scripts/electron-build.mjs --linux --win",
    "build:electron:test": "node scripts/run-tests.mjs --require-pass && npm run build:electron",
    "build:all": "node scripts/run-tests.mjs --require-pass && npm run build:web && npm run build:electron:all",
    
    "count-lines": "./scripts/count-lines.sh",
    "optimize:panel-svg": "node scripts/tools/optimize-panel-svg.mjs",
    "version": "npm run build:web && git add -A",
    "release:patch": "node scripts/run-tests.mjs --require-pass && node scripts/release/pre.mjs && npm version patch --message \"release: Synthi GME v%s\" && node scripts/release/post.mjs",
    "release:minor": "node scripts/run-tests.mjs --require-pass && node scripts/release/pre.mjs && npm version minor --message \"release: Synthi GME v%s\" && node scripts/release/post.mjs",
    "release:major": "node scripts/run-tests.mjs --require-pass && node scripts/release/pre.mjs && npm version major --message \"release: Synthi GME v%s\" && node scripts/release/post.mjs",
    "postversion": "printf '\nRecuerda ejecutar git push origin main && git push origin --tags\n'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mesjetiu/SynthiGME-web.git"
  },
  "keywords": [
    "web-audio",
    "synth",
    "ems"
  ],
  "author": {
    "name": "Carlos Arturo Guerra Parra",
    "email": "carlosarturoguerra@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mesjetiu/SynthiGME-web/issues"
  },
  "homepage": "https://github.com/mesjetiu/SynthiGME-web#readme",
  "build": {
    "appId": "com.synthigme.app",
    "productName": "SynthiGME",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist-app/**/*",
      "electron/**/*",
      "node_modules/naudiodon/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/native/build/Release/pipewire_audio.node",
        "to": "native/pipewire_audio.node"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/naudiodon/**/*",
      "electron/native/**/*"
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Audio",
      "icon": "resources/icons/icon.png",
      "artifactName": "${productName}-${env.BUILD_VERSION}-${arch}.${ext}"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "resources/icons/icon.ico",
      "artifactName": "${productName}-${env.BUILD_VERSION}-${arch}.${ext}"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.music",
      "icon": "resources/icons/icon.png",
      "artifactName": "${productName}-${env.BUILD_VERSION}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${env.BUILD_VERSION}-${arch}.${ext}"
    }
  },
  "dependencies": {
    "osc": "^2.4.5"
  },
  "optionalDependencies": {
    "naudiodon": "^2.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.27.2",
    "fake-indexeddb": "^6.2.5",
    "http-server": "^14.1.1",
    "jsdom": "^27.0.1",
    "playwright": "^1.57.0",
    "svgo": "^4.0.0"
  }
}
